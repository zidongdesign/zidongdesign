Events = 'auto';\n                gsap.fromTo('.language-cover',{\n                    opacity:0,\n                },{\n                    duration:0.8,\n                    opacity:1,\n                    ease:Power2.easeInOut,\n                    onComplete:()=>{\n                        this.$emit('switchLanguage');\n                        gsap.to('.language-cover',{\n                            delay:0.2,\n                            duration:0.8,\n                            opacity:0,\n                            ease:Power2.easeInOut,\n                            onComplete:()=>{\n                                document.querySelector('.language-cover').style.pointerEvents = 'none';\n                            }\n                        })\n                    }\n                });\n\n            }\n        },\n        watch:{\n            language:function () {\n                if(this.language === 'ZH'){\n                    document.querySelector('#EN').style.opacity = 0.5;\n                    document.querySelector('#ZH').style.opacity = 1;\n                }\n                else if(this.language === 'EN'){\n                    document.querySelector('#ZH').style.opacity = 0.5;\n                    document.querySelector('#EN').style.opacity = 1;\n                }\n            }\n        }\n    }\n</script>\n\n<style scoped>\n    .language{\n        position: fixed;\n        right: 1rem;\n        top: 1rem;\n        color: var(--white);\n        z-index: 97;\n        padding: 1rem;\n        font-size: 1rem;\n        height: 2rem;\n        text-align: center;\n        line-height: 2rem;\n        mix-blend-mode:difference\n    }\n    .language-cover{\n        position: fixed;\n        width: 100vw;\n        height: 100vh;\n        background: var(--background-color);\n        top: 0;\n        opacity: 0;\n        z-index: 100;\n        pointer-events: none;\n    }\n    span{\n        transition: 0.4s ease-in-out;\n        pointer-events: none;\n    }\n</style>"]}]}